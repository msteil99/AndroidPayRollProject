<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frCurDate"
    android:theme="@style/AppThemeMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentDateFragment">

    <TextView
        android:id="@+id/tvCurrentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Date"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="88dp"
        android:text="Reg Hours"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentDate" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:text="OT Hours"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:text="Sick Time"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/etRegHours"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentDate" />

    <EditText
        android:id="@+id/etOtHours"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/etRegHours" />

    <EditText
        android:id="@+id/etSickHours"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/etOtHours" />

    <Button
        android:id="@+id/btnAddHours"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:layout_marginStart="152dp"
        android:background="@drawable/btn_custom"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.273" />

    <Button
        android:id="@+id/btnAddReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_custom"
        android:text="Add Hours"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/etRegHours"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentDate" />

    <Button
        android:id="@+id/btnAddOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="Add Hours"
        android:background="@drawable/btn_custom"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/etOtHours"
        app:layout_constraintTop_toBottomOf="@+id/btnAddReg" />

    <Button
        android:id="@+id/btnAddSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Add Hours"
        android:textSize="12sp"
        android:background="@drawable/btn_custom"
        app:layout_constraintStart_toEndOf="@+id/etSickHours"
        app:layout_constraintTop_toBottomOf="@+id/btnAddOT" />


</androidx.constraintlayout.widget.ConstraintLayout>