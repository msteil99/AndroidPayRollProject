<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/tvHourlyRate"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Hourly Rate"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/customBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/tvOtRate"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="OT Rate"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/customBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHourlyRate"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/tvSickPercent"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Sick Percentage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/customBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOtRate"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/tvPayCycle"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif"
        android:text="Days Per Cycle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/customBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSickPercent"
        app:layout_constraintVertical_bias="0.135" />

    <EditText
        android:id="@+id/etHourlyRate"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/tvHourlyRate"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etOTRate"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/tvOtRate"
        app:layout_constraintTop_toBottomOf="@+id/etHourlyRate" />

    <EditText
        android:id="@+id/etSickPercent"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/tvSickPercent"
        app:layout_constraintTop_toBottomOf="@+id/etOTRate" />

    <EditText
        android:id="@+id/etDaysPerCycle"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        android:digits="0"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/btnSetAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@+id/tvPayCycle"
        app:layout_constraintTop_toBottomOf="@+id/etSickPercent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSetAll"
        android:layout_width="117dp"
        android:layout_height="67dp"
        android:layout_marginStart="144dp"
        android:background="@color/colorBackground"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPayCycle"
        app:layout_constraintVertical_bias="0.809" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:text="firstPayDate"
        app:layout_constraintBottom_toTopOf="@+id/btnSetAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPayCycle"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:text="6/27/2020"
        app:layout_constraintBottom_toTopOf="@+id/btnSetAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/etDaysPerCycle"
        app:layout_constraintVertical_bias="0.272" />

</androidx.constraintlayout.widget.ConstraintLayout>